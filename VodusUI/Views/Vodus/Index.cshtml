@model IEnumerable<VodusDomainLayer.Model.PageContent>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<div>
    <form asp-action="Index" method="post" enctype="multipart/form-data">
        <div class="d-flex mb-3">
            <div>
                <input type="file" value="Upload Excel" name="excelFileName" class="form-control" style="height:45px" />
            </div>
            <div class="ml-3">
                <input type="submit" value="Convert Excel-Json" class="btn btn-success" />
            </div>
        </div>

    </form>
</div>
<div>
   
    <div class="d-flex mb-3">
        <div>
            <lable>Start Date</lable>
            <input type="text" id="startDate" name="startDate" class="form-control">
        </div>
        <div class="ml-3">
            <lable>End Date</lable>
            <input type="text" id="endDate" name="endDate" class="form-control">
        </div>
    </div>

</div>

<div class="data-container">
    <table class="table table-bordered align-items-center" id="tblLocations">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Page)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PromoTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PromoDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TermsCondition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@item.Page" target="_blank"> @item.Page</a>
                        </td>
                        <td>
                            @item.PromoTitle
                        </td>
                        <td>
                            @item.PromoDescription
                        </td>
                        <td>
                            @item.TermsCondition
                        </td>
                        <td>
                            @item.StartDate
                        </td>
                        <td>
                            @item.EndDate
                        </td>
                        <td>
                            <img src="@item.ImageUrl" class="imageHeightWidth" />
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>